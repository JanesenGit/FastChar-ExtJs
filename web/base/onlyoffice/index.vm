<!DOCTYPE html>
<html lang="en" style="width: 100%;height: 100%;">
<head>
    <meta charset="UTF-8">
    <title>${file.title}</title>
    <script type="text/javascript" src="${onlyOfficeJs}"></script>
    <style>
        * {
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body style="width: 100%;height: 100%;">

<div id="placeholder" style="width: 100%;height: 100%;"></div>

</body>

<script>
    new DocsAPI.DocEditor("placeholder", {
        "height": "100%",
        "width": "100%",
        "document": {
            "key": "${file.code}",
            "title": "${file.title}",
            "url": "${file.url}",
            "permissions": {
                "chat": false,
                "comment": false,
                "print": true,
            },
        },
        "documentType": "${file.documentType}",
        "editorConfig": {
            "lang": "zh-CN",
            "mode": "view",
            "customization": {
                "anonymous": {
                    "request": false
                },
                "help": false,
                "plugins": false,
                "uiTheme": "theme-dark"
            },
        }
    });

</script>

</html>